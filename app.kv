#:import webbrowser webbrowser

Screen:
    name: 'body'
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.05
        Rectangle:
            pos: self.pos
            size: self.size

    MDBottomNavigation:
        MDBottomNavigationItem:
            name: "map"
            text: 'map'
            on_tab_release: app.go_to_map(screen_manager)
        MDBottomNavigationItem:
            name: "route"
            text: 'route'
            on_tab_release: app.go_to_route(screen_manager)

    NavigationLayout:
        x: toolbar.height
        ScreenManager:
            id: screen_manager
            Screen:
                orientation: 'horizontal'
                name: 'map'
                FloatLayout:
                    MDToolbar:
                        id: toolbar
                        md_bg_color: 1, 1, 1, 0
                        specific_text_color: 0, 0, 0, 0.7
                        elevation: 0
                        size_hint: 1, 0.1
                        height: dp(70)
                        title: 'SVO Guide'
                        right_action_items: [['menu', lambda x: app.go_to_profile(screen_manager)]]
                        pos_hint: {"x":0, "top":1}
                    RelativeLayout:
                        size_hint: None, None
                        pos_hint: {"x": 0.45, "y": 0.5}
                        opacity: .7
                        Scatter:
                            id: scatter
                            scale: root.width/160
                            center: 35, -15
                            Image:
                                id: cool_img
                                source: "B-3.jpg"
                                size_hint: None, None
                    MDRectangleFlatButton:
                        text: "+"
                        on_release: app.plus()
                        size_hint: 0.1, 0.1
                        pos_hint: {"x":.9, "y":.5}
                    MDRectangleFlatButton:
                        text: "-"
                        on_release: app.minus()
                        size_hint: 0.1, 0.1
                        pos_hint: {"x":.9, "y":.4}
                    MDRectangleFlatButton:
                        text: "reset"
                        on_release: app.map_reset()
                        size_hint: 0.1, 0.1
                        pos_hint: {"x":.9, "y":.3}

            Screen:
                name: "route"
                orientation: 'vertical'
                FloatLayout:
                    MDToolbar:
                        id: toolbar
                        md_bg_color: 1, 1, 1, 0
                        specific_text_color: 0, 0, 0, 0.7
                        elevation: 0
                        size_hint: 1, 0.1
                        height: dp(70)
                        title: 'SVO Route'
                        pos_hint: {"x":0, "top":1}

            Screen:
                name: 'profile'
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        id: toolbar
                        md_bg_color: 1, 1, 1, 0
                        specific_text_color: 0, 0, 0, 0.7
                        elevation: 0
                        size_hint_y: None
                        height: dp(70)
                        title: 'Settings'
                        left_action_items: [['arrow-left', lambda x: app.go_to_map(screen_manager)]]
                    BoxLayout:
                        orientation: 'vertical'
                        pos_hint: {"x":0, "y":1}
                        BoxLayout:
                            orientation: 'horizontal'
                            BoxLayout:
                                orientation: 'vertical'
                                MDLabel:
                                    id: user_gate
                                    bold: True
                                    text: "Gate:"
                                MDLabel:
                                    id: user_departure
                                    bold: True
                                    text: "Departure time:"
                            Button:
                                text: "Build path"
                                on_release: app.build_path()
                        MDLabel:
                            text: "Scan your ticket to get info about your gate and departure time:"
                        Button:
                            text: "Ticket Scanner"
                            on_release: app.run_ticket_scanner()
                        MDLabel:
                            text: "Augment reality guide will entertain your flight waiting and will help to find interesting places easily:"
                        Button:
                            text: 'AR Guide'
                            on_release: webbrowser.open_new('https://192.168.1.185:4000')

            Screen:
                name: "qr"
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    ZBarCam:
                        id: zbarcam
                    Label:
                        size_hint: None,None
                        size: self.texture_size[0], 50
                        text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])
